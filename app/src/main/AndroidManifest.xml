<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dmoratilla30.wakebus" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor"
        tools:ignore="ExtraText">
        <activity android:name="com.dmoratilla30.wakebus.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.dmoratilla30.wakebus.BusquedaActivity"
            android:label="Búsqueda" />
        <activity android:name="com.dmoratilla30.wakebus.LocalizacionActivity"
            android:label="Ubicación actual" />
        <activity android:name="com.dmoratilla30.wakebus.DestinoActivity"
            android:label="Seleccione su destino" />
        <activity android:name="com.dmoratilla30.wakebus.ParadasActivity"
            android:label="Registro de paradas" />
        <activity android:name="com.dmoratilla30.wakebus.AlarmaActivity"
            android:label="Alarma" />
        <activity android:name="com.dmoratilla30.wakebus.ConfiguracionActivity"
            android:label="Configuración" />
    </application>

</manifest>